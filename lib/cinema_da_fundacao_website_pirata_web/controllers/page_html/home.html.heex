<.flash_group flash={@flash} />
<div class={"grid grid-flow-col grid-rows-#{@row_number} bg-zinc-100"}
     style={"grid-template-rows: repeat(#{@row_number}, minmax(0, 1fr))"}>
  <div class="bg-black text-white col-span-6 px-7 pt-10 flex items-center">
    <div>
      <h1 class="text-5xl font-bold capitalize inline"><%= @cinema %></h1>
      <%= for other_cinema <- @other_cinemas do %>
          | <.link href={"/?cinema=#{other_cinema}"} class="inline capitalize hover:font-bold"><%= other_cinema %></.link>
          <% end %>
    </div>
    <div class="ml-auto">
      <img src="/images/lulu-da-pomerania.png"
           class="object-contain h-20">
    </div>
  </div>
  <%= for {day, day_number} <- Enum.with_index(@days) do %>
      <div class="bg-black p-3">
        <span class="relative text-white">
          <%= if ((@today == 2 || @today == 3) && (@today == rem(day_number+5, 7)))
              || ((@today == 0 || @today > 3) && (@today == rem(day_number+4, 7)))
          do %>
          <span class="w-full text-center text-sm font-light absolute bottom-7">
            (hoje)
          </span>
          <% end %>
          <span class="font-bold text-2xl"><%= day %></span>
        </span>
      </div>
      <%= for time_movie <- @schedule[day] do %>
          <div class={if rem(day_number, 2) == 1 do "bg-zinc-300 p-3" else "bg-zinc-100 border-t-2 border-black p-3 pt-2.5" end}>
            <h4 class="font-bold text-2xl block"><%= time_movie[:time] %></h4>
            <.link href={@movie_list[time_movie[:movie]]}>
              <%= time_movie[:movie] %>
            </.link>
          </div>
      <% end %>
  <% end %>
</div>
